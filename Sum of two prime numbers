#include <iostream>
using namespace std;
bool checkPrime(int n);
int main()
{
  int n, i;
  bool flag = false;
  
  cout << "Enter a positive integer : " << end;
  cin >> n;
  
  for(i = 2; i <= n/2; ++i)
  {
    if(checkPrime(i))
    {
      if(checkPrime(n-i))
      {
        cout << n << "=" <<i<< "+" <<n-i<< end;
        flag=true ;
      }
    }
  )
  if(!flag)
  {
    cout <<a<< "cant be expressed as sum two" << end;
  }
  return 0;
  
}

